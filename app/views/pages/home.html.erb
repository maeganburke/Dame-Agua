<div class="container">
  <% if flash[:notice] %>
    <div class="notice alert alert-warning alert-dismissible" role="alert" style="margin-top: 10px"><%= flash[:notice] %><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></div>
  <% end %>

  <% if flash[:alert] %>
    <div class="alert alert alert-success" style="margin-top: 10px"><%= flash[:alert] %><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></div>
  <% end %>
</div>

