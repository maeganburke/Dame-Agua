
<div id="admin-login">
	<div class="container">

		<% if current_admin.present? %>
			<div id="admin-dash">
				<h1>Admin Dash</h1>
				<div class="divider-horizontal"></div>
			</div>
		<% else %>
			<h1>Log in</h1>
			<div class="divider-horizontal"></div>

			<%= form_tag('/admin/sessions', {:method => :post}) do%>

			  username:
				<br>
				<%= text_field_tag :username %>
			  <br>
			  password:
				<br>
				<%= password_field_tag :password %>
			   <br>
				<div class="divider-horizontal"></div>
			  <%= submit_tag "sign in as admin", class: "signup-btn text-center" %>

			<% end %>
		<% end %>
	</div>
</div>
