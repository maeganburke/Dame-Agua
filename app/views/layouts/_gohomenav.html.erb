<div>
  <div class="navbar-fixed-bottom" id="dame-navbar">
    <ul class="nav navbar-nav nav-tabs list-unstyled navbar-right" role="tablist" style="border: none; color: #000085">
      <li><a href="/">back home</a></li>
    </ul>

    <ul class="user nav navbar-nav nav-tabs navbar-left" id="navbar" style="color:white">
      <li class="dropdown">
        <% if current_user.present? %>
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-tint"</a>
            <ul class="dropdown-menu" id="logout-drop">
              <li style="padding: 0">
                <%= link_to 'profile', profile_path %>
                <%= link_to 'logout', logout_path %>
              </li>
        <% else %>
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">login</a>
          <ul class="dropdown-menu">
            <li>
              <%= form_tag "/login", class: "navbar-form navbar-left", role: "signin", id: "signin-form" do %>
                <div class="form-group">
                  <%= text_field_tag :username, nil, class: "form-control text-center", placeholder: "username" %>
                  <%= password_field_tag :password, nil, class: "form-control text-center", placeholder: "password", id: "signin-password" %>

                </div>
                <%= button_tag "get agua", class: "btn-submit btn btn-default btn-block", id: "btn-submit" %>
                <%= link_to "need help?", "/help", class: "btn-help btn btn-default btn-block", id: "btn-help" %>
              <% end %>
            </li>
          </ul>
          <li><a href="/signup">sign up</a></li>
      <% end %>
    </ul>
  </div>
</div>
